<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">#66000000</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
    <item  name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="buttonStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonStyleOnboard" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="buttonStyleWhite" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="buttonStyleGray" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_gray_bg</item>
    </style>

    <style name="buttonStyleShopInfo" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_shopsettingfinish_bg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="item_mine_info_divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Theme.App.Dialog.ShrinkScreen" parent="Base.Theme.AppCompat.Dialog">
        <!-- (1)-->
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <!-- (2) -->
    </style>
    <style name="Theme.App.Dialog.FullScreen" parent="Base.Theme.AppCompat.Dialog">
        <!-- (1)-->
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:textColor">@color/colorTextGray</item>
        <!-- (2) -->
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/material_grey_700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="hintText" parent="android:TextAppearance">
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>
    <style name="DateTimeDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dark_gray</item>
    </style>
    <style name="CustomTabText" parent="TextAppearance.Design.Tab"> 22sp bold </style>


    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/tranlate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/tranlate_dialog_out</item>
    </style>


</resources>
