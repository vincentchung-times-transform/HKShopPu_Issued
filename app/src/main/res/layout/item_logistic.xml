<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder_onboard_8dp">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/empty"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_address_cancel"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/tv_logistic"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_toEndOf="@id/iv_cancel"
        android:hint="@string/textView_setItYourself"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="00dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <com.zilchzz.library.widgets.EasySwitcher
        android:id="@+id/switchview"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="39dp"
        app:sbCloseBgColor="#d9d9d9"
        app:sbDefaultOpened="false"
        app:sbOpenBgColor="#34C759"
        app:sbToggleColor="@color/white" />
</RelativeLayout>

</RelativeLayout>