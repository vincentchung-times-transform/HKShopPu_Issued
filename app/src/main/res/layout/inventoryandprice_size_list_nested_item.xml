<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/customborder_product_inven">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/second_spec_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="項目"/>

            <TextView
                android:id="@+id/textView_HKdolors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HKD$"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/value_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="0"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/value_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="0" />

            <TextView
                android:id="@+id/value_sold_quant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="0"
                android:textColor="@color/black" />

        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->

<!--            <CheckBox-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/textView_needMoreTimeToStockUp"-->
<!--                android:textColor="@color/dark_gray_txt"-->
<!--                android:textSize="14sp" />-->


<!--        </LinearLayout>-->

    </LinearLayout>

</LinearLayout>