    <ImageView
        android:id="@+id/homepagetop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/buyerpagetop"/>
    <ImageView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homepagetop"
        android:src="@mipmap/profile"/>
    <ImageView
        android:id="@+id/buyerpagestatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile"
        android:src="@mipmap/buyerpagestatus"/>
    <ImageView
        android:id="@+id/buyerpageothers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buyerpagestatus"
        android:scaleType="fitXY"
        android:src="@mipmap/buyerpageothers"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_learn_more"/>

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="251dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/notification_background_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            android:text="COMING SOON"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:text="由於還在草創階段，店匯正在籌備買賣等功能以及累積店鋪商品數量。版本2.0即將開通進階功能，敬請期待！"
            android:textColor="@color/dark_gray"
            android:gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/btn_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:src="@mipmap/understandmore"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:src="@mipmap/instruction_first_version"/>

</RelativeLayout>