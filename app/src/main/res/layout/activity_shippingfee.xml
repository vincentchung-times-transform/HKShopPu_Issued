<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/titleBar_shippingfee"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/turquoise">


        <ImageView
            android:id="@+id/titleBack_shippingfee"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="6dp"
            android:padding="10dp"
            android:src="@mipmap/ic_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/titleBack_shippingfee"
            android:text="@string/shippingfee"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_shippingfee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar_shippingfee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_cancel_shipping"
                style="@style/buttonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:text="@string/alert_cancel" />

            <Button
                android:id="@+id/btn_confirm_shipping"
                style="@style/buttonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:text="@string/alert_confirm" />
        </LinearLayout>

            <TextView
                android:id="@+id/et_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:gravity="top"
                android:text="@string/fee_unit"
                android:textColor="@color/material_grey_700"
                android:textSize="28sp" />
        <View style="@style/item_mine_info_divider" />
    <LinearLayout
        android:id="@+id/layout_fee_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_fee_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:gravity="top"
            android:text="@string/fee_more"
            android:textColor="@color/material_grey_700"
            android:textSize="28sp" />
        <EditText
            android:id="@+id/et_fee_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="$xxx"
            android:textColor="@color/material_grey_700"
            android:textSize="28sp"/>
        <TextView
            android:id="@+id/et_fee_more_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:gravity="top"
            android:text="@string/fee_no"
            android:textColor="@color/material_grey_700"
            android:textSize="28sp" />

    </LinearLayout>
        <View style="@style/item_mine_info_divider" />
        <LinearLayout
            android:id="@+id/layout_fee_fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_fee_fix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:gravity="top"
                android:text="@string/fee_fix_head"
                android:textColor="@color/material_grey_700"
                android:textSize="28sp" />
            <EditText
                android:id="@+id/et_fee_fix1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="$xxx"
                android:textColor="@color/material_grey_700"
                android:textSize="28sp"/>
            <TextView
                android:id="@+id/tv_fee_fixto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:gravity="top"
                android:text="@string/fee_to"
                android:textColor="@color/material_grey_700"
                android:textSize="28sp" />
            <EditText
                android:id="@+id/et_fee_fix2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="$xxx"
                android:textColor="@color/material_grey_700"
                android:textSize="28sp"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_fee_fix_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_fee_fix_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:gravity="top"
            android:text="@string/fee_fix"
            android:textColor="@color/material_grey_700"
            android:textSize="28sp" />
        <EditText
            android:id="@+id/et_fee_fix3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="$xxx"
            android:textColor="@color/material_grey_700"
            android:textSize="28sp"/>
    </LinearLayout>
        <View style="@style/item_mine_info_divider" />
        <TextView
            android:id="@+id/tv_fee_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:gravity="top"
            android:text="@string/fee_follow"
            android:textColor="@color/material_grey_700"
            android:textSize="28sp" />
        <View style="@style/item_mine_info_divider" />
    </LinearLayout>

</RelativeLayout>