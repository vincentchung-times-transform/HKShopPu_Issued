<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_bank_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="10dp"
    android:outlineSpotShadowColor="@color/hkshop_color"
    android:background="@drawable/customborder_onboard_16dp_down"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_preset"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:contentDescription="@string/empty"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_bankaccountpreset" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/empty"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_address_cancel"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:text=""
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:singleLine="true"
            android:text=""
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>