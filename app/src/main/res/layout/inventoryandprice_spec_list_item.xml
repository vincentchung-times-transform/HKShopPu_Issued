<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_spec_first_layer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_title_spec"
            android:textColor="@color/gray_txt"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" : "
            android:textColor="@color/gray_txt"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/value_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_spec_second_layer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/container_spec_first_layer_title"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/item_spec_column_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textView_setInventorySize"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textView_setInventoryPrice"
            android:textSize="12sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="@string/textView_setInventoryQuantity"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/container_spec_second_layer_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:elevation="10dp"
        android:outlineSpotShadowColor="@color/hkshop_color"
        android:background="@drawable/customborder_addproduct">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/second_spec_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:text="@string/textView_setInventorySize"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textView_HKdolors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HKD$"
                        android:textColor="@color/gray_txt"
                        android:textSize="14sp"/>
                    <EditText
                        android:id="@+id/value_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:textColor="@color/black"
                        android:hint="0"
                        android:textSize="14sp" />

                </LinearLayout>


                <EditText
                    android:id="@+id/value_quantity"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:imeOptions="actionDone"
                    android:background="@color/white"
                    android:hint="0" />

            </LinearLayout>

            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:orientation="horizontal">-->

            <!--            <CheckBox-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="@string/textView_needMoreTimeToStockUp"-->
            <!--                android:textColor="@color/dark_gray_txt"-->
            <!--                android:textSize="14sp" />-->


            <!--        </LinearLayout>-->

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>