<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="36dp"
    android:layout_marginEnd="36dp"
    android:visibility="gone">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_storeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:cardBackgroundColor="@color/colordivideline"
        app:cardCornerRadius="45dp">

        <ImageView
            android:id="@+id/iv_store"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/iv_storeIcon"
        android:text="ONE DAY"
        android:textSize="12dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:text="發貨中"
        android:textSize="14dp"
        android:textColor="@color/turquoise"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_productIcon"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_below="@id/iv_storeIcon"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colordivideline"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/iv_productIcon"
        android:layout_alignTop="@id/iv_productIcon"
        android:text="010 SOUL香水"
        android:textSize="12dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_product_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/iv_productIcon"
        android:layout_below="@id/tv_product_name"
        android:text="168ml"
        android:textSize="12dp"
        android:textColor="@color/colorbottomgray"/>

    <TextView
        android:id="@+id/tv_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_product_name"
        android:layout_alignTop="@id/tv_product_spec"
        android:text="x1"
        android:textSize="12dp"
        android:textColor="@color/colorbottomgray"/>

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_product_quantity"
        android:text="HKD$ 1,905"
        android:textSize="12dp"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/tv_item_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/iv_productIcon"
        android:text="2"
        android:textSize="12dp"
        android:textColor="@color/colorbottomgray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_below="@id/iv_productIcon"
        android:layout_toEndOf="@id/tv_item_total"
        android:text="@string/search_tab1"
        android:textSize="12dp"
        android:textColor="@color/colorbottomgray"/>

    <TextView
        android:id="@+id/tv_order_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/tv_order_amount"
        android:layout_below="@id/tv_product_price"
        android:layout_alignTop="@id/tv_item_total"
        android:text="@string/order_total"
        android:textSize="12dp"
        android:textColor="@color/turquoise"/>

    <TextView
        android:id="@+id/tv_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_product_price"
        android:layout_alignTop="@id/tv_item_total"
        android:text="HKD$ 3,000"
        android:textSize="12dp"
        android:textColor="@color/turquoise"/>




</RelativeLayout>