<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp">

                <RelativeLayout
                    android:id="@+id/layout_shopImg"
                    android:layout_width="80dp"
                    android:layout_height="85dp">

                    <ImageView
                        android:id="@+id/iv_shopImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/no_image" />

                    <ImageView
                        android:id="@+id/iv_shopImgadd"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/ic_add" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_shoptitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/layout_shopImg"
                    android:text="Shop Title"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:src="@mipmap/ic_add" />

            </RelativeLayout>

            <View style="@style/item_mine_info_divider" />

            <com.tiper.MaterialSpinner
                android:id="@+id/sp_productcategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Shop Category"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp" />

            <View style="@style/item_mine_info_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingTop="18dp"
                android:paddingEnd="10dp"
                android:paddingBottom="18dp">

                <RelativeLayout
                    android:id="@+id/layout_shopDes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/iv_shopDes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/no_image" />

                    <ImageView
                        android:id="@+id/iv_shopDesadd"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@mipmap/ic_add" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_shopDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_shopDes"
                    android:layout_centerVertical="true"
                    android:text="Shop Description &amp; Infomation"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/layout_addShop"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/tv_shopDes"
                    android:background="@drawable/customborder"
                    android:orientation="horizontal"
                    android:paddingStart="12dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_add" />

                    <TextView
                        android:id="@+id/addShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="30dp"
                        android:text="Add Description"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/tv_shopDes"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/tv_shopInfo"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginEnd="75dp"
                        android:lines="3"
                        android:text="Add Description"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </RelativeLayout>
            </RelativeLayout>

            <View style="@style/item_mine_info_divider" />

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_shopDes"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:text="Payment Method"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/layout_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shopDes"
                android:orientation="horizontal"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_visa" />
            </LinearLayout>
            <View style="@style/item_mine_info_divider" />

            <com.tiper.MaterialSpinner
                android:id="@+id/sp_product_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Payment Method"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp"
                />

            <View style="@style/item_mine_info_divider" />
            <com.tiper.MaterialSpinner
                android:id="@+id/sp_product_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Shipping Fee Setting"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp"
                />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>